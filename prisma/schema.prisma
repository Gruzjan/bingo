generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Games {
  id          Int          @id @default(autoincrement())
  isRuuning   Boolean
  gameCode    String
  savedBoards SavedBoards?
}

model WordLists {
  id    Int    @id @default(autoincrement())
  name  String
  words String
}

model SavedBoards {
  id     Int    @id @default(autoincrement())
  gameId Int    @unique
  name   String
  board  String
  Games  Games  @relation(fields: [gameId], references: [id])
}
